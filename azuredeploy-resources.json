{
  "$schema": "https://schema.management.azure.com/schemas/2019-04-01/deploymentTemplate.json#",
  "contentVersion": "1.0.0.0",
  "parameters": {
    "locations": {
      "type": "array"
    }
  },
  "variables": {
  },
  "resources": [
    {
      "type": "Microsoft.Resources/deployments",
      "apiVersion": "2021-04-01",
      "name": "[concat(parameters('locations')[copyIndex()].location, '_resources_', uniqueString(resourceGroup().Id))]",
      "resourceGroup": "[concat(parameters('locations')[copyIndex()].location, '_shared')]",
      "properties": {
        "mode": "Incremental",
        "expressionEvaluationOptions": {
          "scope": "inner"
        },
        "templateLink": {
          "uri": "[uri(deployment().properties.templateLink.uri, 'arm-network.json')]",
          "contentVersion": "1.0.0.2"
        },
        "parameters": {
          "resourceGroupName": {
            "value": "[concat(parameters('locations')[copyIndex()].location, '_shared')]"
          },
          "virtualNetworkInformation": {
            "value": "[parameters('locations')[copyIndex()].virtualNetwork]"
          }
        }
      },
      "copy": {
        "name": "locationName",
        "count": "[length(parameters('locations'))]"
      }
    }
  ],
  "outputs": {}
}
