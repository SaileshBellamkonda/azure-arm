{
  "$schema": "https://schema.management.azure.com/schemas/2019-04-01/deploymentTemplate.json#",
  "contentVersion": "1.0.0.0",
  "parameters": {
    "locations": {
      "type": "array"
    }
  },
  "variables": {
    "uniqueStr": "[uniqueString(subscription().subscriptionId)]"
  },
  "resources": [
    {
      "type": "Microsoft.Resources/deployments",
      "apiVersion": "2021-04-01",
      "name": "[concat(parameters('locations')[copyIndex()].location, '_shared', variables('uniqueStr'))]",
      "location": "[parameters('locations')[copyIndex()].location]",
      "properties": {
        "mode": "Incremental",
        "templateLink": {
          "uri": "https://raw.githubusercontent.com/SaileshBellamkonda/azure-arm/main/arm-resource-group.json",
          "contentVersion": "1.0.0.0"
        },
        "parameters": {
          "resourceGroupName": {
            "value": "[concat(parameters('locations')[copyIndex()].location, '_shared')]"
          },
          "location": {
            "value": "[parameters('locations')[copyIndex()].location]"
          }
        }
      },
      "copy": {
        "name": "locationName",
        "count": "[length(parameters('locations'))]"
      }
    },
    //{
    //  "type": "Microsoft.Resources/resourceGroups",
    //  "apiVersion": "2021-04-01",
    //  "location": "[parameters('locations')[copyIndex()].location]",
    //  "name": "[concat(parameters('locations')[copyIndex()].location, '_shared')]",
    //  "tags": {
    //    "azRegion": "[parameters('locations')[copyIndex()].location]"
    //  },
    //  "copy": {
    //    "name": "locationName",
    //    "count": "[length(parameters('locations'))]"
    //  }
    //},
    {
      "type": "Microsoft.Resources/deployments",
      "apiVersion": "2021-04-01",
      "name": "[concat(parameters('locations')[copyIndex()].location, '_resources', variables('uniqueStr'))]",
      "dependsOn": [
        "[resourceId(resourceGroup().name,'Microsoft.Resources/deployments', concat(parameters('locations')[copyIndex()].location, '_shared', variables('uniqueStr')))]"
      ],
      "resourceGroup": "[concat(parameters('locations')[copyIndex()].location, '_shared')]",
      "properties": {
        "mode": "Incremental",
        "templateLink": {
          "uri": "https://raw.githubusercontent.com/SaileshBellamkonda/azure-arm/main/arm-network.json",
          "contentVersion": "1.0.0.0"
        },
        "parameters": {
          "resourceGroupName": {
            "value": "[concat(parameters('locations')[copyIndex()].location, '_shared')]"
          },
          "virtualNetworkAddressPrefixes": {
            "value": "[parameters('locations')[copyIndex()].virtualNetwork]"
          }
        }
      },
      "copy": {
        "name": "locationName",
        "count": "[length(parameters('locations'))]"
      }
    }
  ],
  "outputs": {}
}
